<Window x:Class="binstarjs03.AerialOBJ.WpfApp.UIElements.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:binstarjs03.AerialOBJ.WpfApp.UIElements.Windows"
        xmlns:controls="clr-namespace:binstarjs03.AerialOBJ.WpfApp.UIElements.Controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type local:MainWindowVM}}"
        
        Title="{Binding Path=Title,
                        Mode=OneWay}"
        d:Title="MineSharpOBJ"
        Width="800" Height="600"
        MinWidth="450" MinHeight="300"
        d:Width="600" d:Height="400"
        
        Name="Root"
        LocationChanged="OnLocationChanged" 
        SizeChanged="OnSizeChanged" >
    <Grid>
        <DockPanel>
            <Menu IsMainMenu="True" DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Open" 
                              Command="{Binding OpenCommand}"/>
                    <MenuItem Header="Close"
                              IsEnabled="{Binding Path=HasSavegameLoaded,
                                                  Mode=OneWay}"
                              Command="{Binding CloseCommand}"/>
                    <Separator/>
                    <MenuItem Header="Setting"
                              Command="{Binding SettingCommand}"/>
                    <MenuItem Header="Exit" 
                              Command="{Binding WindowCloseCommand}"/>
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem Header="Side Panel"
                              IsEnabled="{Binding Path=HasSavegameLoaded, 
                                                  Mode=OneWay}"
                              IsCheckable="True"
                              IsChecked="{Binding ElementName=Viewport, 
                                                  Path=DataContext.SidePanelVisible, 
                                                  Mode=TwoWay, 
                                                  UpdateSourceTrigger=PropertyChanged}"/>
                    <MenuItem Header="Viewport Debug Info"
                              IsEnabled="{Binding Path=HasSavegameLoaded,
                                                  Mode=OneWay}"
                              IsCheckable="True"
                              IsChecked="{Binding ElementName=Viewport, 
                                                  Path=DataContext.SidePanelDebugInfoVisible, 
                                                  Mode=TwoWay, 
                                                  UpdateSourceTrigger=PropertyChanged}"/>
                    <MenuItem Header="Debug Log" 
                              IsCheckable="True"
                              IsChecked="{Binding Path=DebugLogWindowVisible, 
                                                  Mode=TwoWay, 
                                                  UpdateSourceTrigger=PropertyChanged}"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="About..." 
                              Command="{Binding AboutCommand}"/>
                </MenuItem>
                <MenuItem Header="Debug">
                    <MenuItem Header="Force Garbage Collect"
                              Command="{Binding ForceGCCommand}"/>
                </MenuItem>
            </Menu>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Region "/>
                        <TextBlock d:Text="(0, 0)"
                                   Text="{Binding ElementName=Viewport,
                                                  Path=DataContext.MouseHoverRegionCoords,
                                                  Mode=OneWay}"
                                   Visibility="{Binding ElementName=Viewport,
                                                        Path=DataContext.MouseHoverHasBlock,
                                                        Mode=OneWay,
                                                        Converter={StaticResource BoolToVisibility}}"/>
                    </StackPanel>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Chunk "/>
                        <TextBlock Text="a"/>
                        <TextBlock d:Text="(0, 0)"
                                   Text="{Binding ElementName=Viewport,
                                                  Path=DataContext.MouseHoverChunkCoordsAbs,
                                                  Mode=OneWay}"
                                   Visibility="{Binding ElementName=Viewport,
                                                        Path=DataContext.MouseHoverHasBlock,
                                                        Mode=OneWay,
                                                        Converter={StaticResource BoolToVisibility}}"/>
                        <TextBlock Text=" r"/>
                        <TextBlock d:Text="(0, 0)"
                                   Text="{Binding ElementName=Viewport,
                                                  Path=DataContext.MouseHoverChunkCoordsRel,
                                                  Mode=OneWay}"
                                   Visibility="{Binding ElementName=Viewport,
                                                        Path=DataContext.MouseHoverHasBlock,
                                                        Mode=OneWay,
                                                        Converter={StaticResource BoolToVisibility}}"/>
                    </StackPanel>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Section "/>
                        <TextBlock d:Text="0" 
                                   Text="{Binding ElementName=Viewport,
                                                  Path=DataContext.MouseHoverSectionY,
                                                  Mode=OneWay}" 
                                   Visibility="{Binding ElementName=Viewport,
                                                        Path=DataContext.MouseHoverHasBlock,
                                                        Mode=OneWay,
                                                        Converter={StaticResource BoolToVisibility}}"/>
                    </StackPanel>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Block "/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="a"/>
                            <TextBlock d:Text="(0, 0, 0)"
                                       Text="{Binding ElementName=Viewport,
                                                      Path=DataContext.MouseHoverBlockCoordsAbs,
                                                      Mode=OneWay}" 
                                       Visibility="{Binding ElementName=Viewport,
                                                            Path=DataContext.MouseHoverHasBlock,
                                                            Mode=OneWay,
                                                            Converter={StaticResource BoolToVisibility}}"/>
                            <TextBlock Text=" r"/>
                            <TextBlock d:Text="(0, 0, 0)"
                                       Text="{Binding ElementName=Viewport,
                                                      Path=DataContext.MouseHoverBlockCoordsRel,
                                                      Mode=OneWay}" 
                                       Visibility="{Binding ElementName=Viewport,
                                                            Path=DataContext.MouseHoverHasBlock,
                                                            Mode=OneWay,
                                                            Converter={StaticResource BoolToVisibility}}"/>
                            <TextBlock Text=" - "/>
                            <TextBlock d:Text="minecraft:air"
                                       Text="{Binding ElementName=Viewport,
                                                      Path=DataContext.MouseHoverBlockName,
                                                      Mode=OneWay}" 
                                       Visibility="{Binding ElementName=Viewport,
                                                            Path=DataContext.MouseHoverHasBlock,
                                                            Mode=OneWay,
                                                            Converter={StaticResource BoolToVisibility}}"/>
                        </StackPanel>
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>
            <controls:ViewportControl x:Name="Viewport" IsEnabled="{Binding ElementName=Root, 
                                                                            Path=DataContext.HasSavegameLoaded,
                                                                            Mode=OneWay}"/>
        </DockPanel>
    </Grid>
</Window>
