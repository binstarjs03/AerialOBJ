<Application x:Class="MineSharpOBJ.UIPrototype.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MineSharpOBJ.UIPrototype"
             StartupUri="UIElements/Windows/ExportWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="DarkBackground" Color="#2d2d2d"/>
        <SolidColorBrush x:Key="DarkForeground" Color="#b8b8b8"/>


        <Style x:Key="PanelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource DarkForeground}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="TransparentSeparator" TargetType="Separator">
            <Setter Property="Height" Value="5"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

    </Application.Resources>
</Application>
