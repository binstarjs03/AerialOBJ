<Application x:Class="binstarjs03.MineSharpOBJ.WpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:binstarjs03.MineSharpOBJ.WpfApp"
             xmlns:converters="clr-namespace:binstarjs03.MineSharpOBJ.WpfApp.BindingConverters"
             StartupUri="UIElements/Windows/MainWindow.xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <SolidColorBrush x:Key="DarkBackground" Color="#2d2d2d"/>
        <SolidColorBrush x:Key="LightForeground" Color="#b8b8b8"/>
        <Style x:Key="PanelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LightForeground}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <converters:BoolToVisibilityHide x:Key="BoolToVisibilityHide"/>
        <converters:BoolToVisibilityCollapse x:Key="BoolToVisibilityCollapse"/>
    </Application.Resources>
</Application>
