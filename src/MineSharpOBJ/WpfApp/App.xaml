<Application x:Class="binstarjs03.MineSharpOBJ.WpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:binstarjs03.MineSharpOBJ.WpfApp"
             xmlns:converters="clr-namespace:binstarjs03.MineSharpOBJ.WpfApp.Converters"
             StartupUri="UIElements/Windows/MainWindow.xaml"
             ShutdownMode="OnMainWindowClose"
             Startup="OnStartup">
    <Application.Resources>
        
        
        <SolidColorBrush x:Key="DarkBackground" Color="#2d2d2d"/>
        <SolidColorBrush x:Key="DarkForeground" Color="#b8b8b8"/>
        
        
        <Style x:Key="PanelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource DarkForeground}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="TransparentSeparator" TargetType="Separator">
            <Setter Property="Height" Value="5"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        
        <converters:BoolToVisibility x:Key="BoolToVisibility"/>
        
        
    </Application.Resources>
</Application>
